<!DOCTYPE html>
<html lang="en">

<!--suppress HtmlRequiredTitleElement -->
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Help and Support</title>

    <% include partials/head_css.ejs %>

    <script>
        new WOW().init();
    </script>

</head>

<body class="animsition">
<div class="page-wrapper">

    <% include partials/sidemenu.ejs %>

    <!-- PAGE CONTAINER-->
    <div class="page-container">

        <% include partials/header_nav.ejs %>

        <!-- MAIN CONTENT-->
        <div class="main-content">

            <!---- Action First End (More Functionality can be added here, if we extend this project)----->

            <!--<br>-->
            <div class="container">

                <div class="col-lg-12 col-md-12">
                    <h2 class="title-1 m-b-25 animated fadeInDown">Help and Support </h2>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-lg-12 shadow p-3 mb-5 bg-white rounded">


                                    <div class="ml-5" id="form_case_support">

                                        <div class="form-group row">
                                            <label for="dropdown_case_category"
                                                   class="col-sm-2 col-form-label col-form-label-sm">Category : </label>

                                            <div class="col-sm-3">
                                                <select id="dropdown_case_category"
                                                        class="form-control form-control-sm">
                                                    <option value="billing">Billing Support</option>
                                                    <option value="account">Account Issues</option>
                                                    <option value="upgrade">Upgrade Issue</option>
                                                    <option value="new">New Connection Query</option>
                                                    <option value="other">Other Issues</option>
                                                </select>

                                            </div>

                                            <div class="col-sm-3">
                                                <input type="text" id="input_other_category"
                                                       class="form-control form-control-sm"
                                                       placeholder="Other" disabled>
                                            </div>

                                        </div>


                                        <!--<div class="col-sm-4">-->
                                        <!--<select id="input_alarm_time_unit" class="form-control form-control-sm">-->
                                        <!--<option>Month</option>-->
                                        <!--<option>Day</option>-->
                                        <!--</select>-->
                                        <!--</div>-->

                                        <div class="form-group row">
                                            <label for="dropdown_case_severity"
                                                   class="col-sm-2 col-form-label col-form-label-sm">Severity : </label>
                                            <div class="col-sm-6">

                                                <select id="dropdown_case_severity"
                                                        class="form-control form-control-sm">
                                                    <option>Low</option>
                                                    <option>Normal</option>
                                                    <option>High</option>
                                                    <option>Critical</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group row ">
                                            <label for="input_case_subject"
                                                   class="col-sm-2 col-form-label col-form-label-sm">Subject : </label>
                                            <div class="col-sm-6">
                                                <input type="text" id="input_case_subject"
                                                       class="form-control form-control-sm"
                                                       placeholder="Brief summary of the issue">
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="input_textarea_description"
                                                   class="col-sm-2 col-form-label col-form-label-sm">Description
                                                : </label>
                                            <div class="col-sm-6">
                                                <textarea id="input_textarea_description"
                                                          class="form-control border-invalid form-control-sm" rows="5"
                                                          placeholder="Detailed account of the issue"></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="input_alarm_threshold_val"
                                                   class="col-sm-2 col-form-label col-form-label-sm">Attachments
                                                : </label>
                                            <div class="col-sm-6">
                                                <form id="form_attachment" enctype="multipart/form-data">
                                                    <input class="form-control-sm" type="file"
                                                           id="input_case_file_attachment"
                                                           name="student_image">
                                                </form>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="dropdown_case_contact_language"
                                                   class="col-sm-2 col-form-label col-form-label-sm">Severity : </label>
                                            <div class="col-sm-6">

                                                <select id="dropdown_case_contact_language"
                                                        class="form-control form-control-sm">
                                                    <option>English</option>
                                                    <option>हिंदी</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group row">

                                            <label for="dropdown_case_contact_language"
                                                   class="col-sm-2 col-form-label col-form-label-sm">Contact Method :
                                            </label>


                                            <div class="card mx-3 col-sm-4 text-center text-white bg-success">
                                                <div class="card-header">Email</div>

                                                <div class="mx-3 card-body">
                                                    <h6 class="card-subtitle mb-2">We will use email
                                                        communication.</h6>
                                                    <input type="email" id="input_email"
                                                           class="form-control form-control-sm  display-none"
                                                           placeholder="Email address">
                                                </div>
                                            </div>

                                            <div class="card mx-3 col-sm-4 text-center">
                                                <div class="card-header">Mobile</div>

                                                <div class="mx-3 card-body">
                                                    <h6 class="card-subtitle mb-2">We will call you at your
                                                        number.</h6>
                                                    <input type="text" id="input_mobile"
                                                           class="form-control form-control-sm display-none"
                                                           oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');"
                                                           onKeyDown="if(this.value.length===10 && event.keyCode!==8) return false;"
                                                           placeholder="Mobile no.">
                                                </div>

                                            </div>

                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <br>

            </div>


            <!-- Modal  for  create alerts-->
            <div class="modal fade" id="modal_create_alert" tabindex="-1" role="dialog"
                 aria-labelledby="modal_create_alert_title" aria-hidden="true">

                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modal_create_alert_title"> Create a new Alert
                            </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">

                            <div class="ml-5" id="modal_form_container">

                                <div class="form-group row">
                                    <label for="input_alarm_name"
                                           class="col-sm-4 col-form-label col-form-label-sm">Alert Name : </label>
                                    <div class="col-sm-6">
                                        <input type="text" id="input_alarm_name"
                                               class="form-control form-control-sm"
                                               placeholder="Ex. Home 50 Unit">
                                    </div>
                                </div>

                                <div class="form-group row ">
                                    <label for="attach_to"
                                           class="col-sm-4 col-form-label col-form-label-sm">Attach To : </label>
                                    <div class="col-sm-6">
                                        <select id="attach_to" class="form-control form-control-sm">
                                            <option>Home-4848465</option>
                                            <option>Office-6842628</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="input_alarm_sms_no"
                                           class="col-sm-4 col-form-label col-form-label-sm">Alert To : </label>
                                    <div class="col-sm-6">
                                        <input type="text" id="input_alarm_sms_no"
                                               class="form-control form-control-sm"
                                               oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');"
                                               onKeyDown="if(this.value.length===10 && event.keyCode!==8) return false;"
                                               placeholder="Mobile no.">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="input_alarm_threshold_val"
                                           class="col-sm-4 col-form-label col-form-label-sm">Threshold Value
                                        : </label>
                                    <div class="col-sm-6">
                                        <input type="number" id="input_alarm_threshold_val"
                                               class="form-control form-control-sm"
                                               placeholder="Ex. 50">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="input_alarm_for_time"
                                           class="col-sm-4 col-form-label col-form-label-sm">For a time of </label>
                                    <div class="col-sm-2">
                                        <input type="number" id="input_alarm_for_time" min="1" max="10000"
                                               class="form-control form-control-sm"
                                               placeholder="">
                                    </div>

                                    <div class="col-sm-4">
                                        <select id="input_alarm_time_unit" class="form-control form-control-sm">
                                            <option>Month</option>
                                            <option>Day</option>
                                        </select>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="modal_button_close" type="button" class="btn btn-secondary"
                                    data-dismiss="modal">Cancel
                            </button>
                            <button id="modal_button_create_alert" type="button" class="btn btn-primary">Create
                                Alarm
                            </button>
                        </div>

                    </div>
                </div>
            </div>


        </div>
        <!-- END MAIN CONTENT-->

    </div>
    <!-- END PAGE CONTAINER-->


</div>

<% include partials/js_bottom.ejs %>

